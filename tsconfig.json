{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "preserveConstEnums": true,
    "allowJs": true
  },
  "include": [
    "./src/**/**/*"
  ],
}

